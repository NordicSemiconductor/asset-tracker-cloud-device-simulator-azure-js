{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noEmit": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "#simulator/*": ["simulator/*"]
    }
  }
}
